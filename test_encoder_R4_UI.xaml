        <TextBlock Text="Index : " HorizontalAlignment="Left" Margin="240,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Compteur : " HorizontalAlignment="Left" Margin="240,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Direction : " HorizontalAlignment="Left" Margin="240,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label x:Name="VariableIndex" Content="" HorizontalAlignment="Left" Margin="278,78,0,0" VerticalAlignment="Top" Height="27" Width="130"/>
        <Label x:Name="VariableCounter" Content="" HorizontalAlignment="Left" Margin="302,99,0,0" VerticalAlignment="Top" Height="27" Width="130"/>
